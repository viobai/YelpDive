<%- include("../partials/header") %>

<div class="container">

	<h2 class="text-center" style="margin:75px auto 0px auto;">Add New Comment to <%= scubaspot.name %> </h2>

	<div class="row">		
		<div style="width:50%; margin:25px auto;">
			<form action="/divingsites/<%= scubaspot._id %>/comments" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="comment[text]" placeholder="text">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit!</button>
				</div>
			</form>
			<a href="/divingsites/<%= scubaspot._id %>">Back</a>
		</div>
	</div>
	
</div>

<%- include("../partials/footer") %>