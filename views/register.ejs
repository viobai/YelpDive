<%- include("./partials/header") %>

<div class="container">

	<h2 class="text-center" style="margin:25px auto 0px auto;">Sign Up</h2>

	<div class="row">		
		<div style="width:50%; margin:25px auto;">
			<form action="/register" method="POST">
				<div class="form-group">
					<label for="username">Username</label>
					<input class="form-control" id="username" type="text" name="username" placeholder="username">
				</div>
				<div class="form-group">
					<label for="email">Email</label>
					<input class="form-control" id="email" type="text" name="email" placeholder="email">
				</div>
				<div class="form-group">
					<label for="passfirst">Password</label>
					<input class="form-control" id="passfirst" type="password" name="password" placeholder="password">
				</div>
				<div class="form-group">
					<label for="passsec">Confirm Password</label>
					<input class="form-control" id="passsec" type="password" name="passsec" placeholder="password">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Sign Up!</button>
				</div>
      			<span>Already a Member at YelpDive? <a href="/login">Go Login!</a></span>
			</form>
			<hr>
			<a href="/divingsites">Back</a>
		</div>
	</div>
	
</div>


<%- include("./partials/footer") %>
